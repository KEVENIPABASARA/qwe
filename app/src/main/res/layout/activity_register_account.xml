<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register_account"
    android:background="@drawable/img">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="SING UP"
        android:textColor="#1432D6"
        android:textSize="50dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="367dp" />


    <TextView
        android:id="@+id/E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:text="Email"
        android:textColor="#4F90C5"
        android:textSize="34dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/E1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/E"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:textColor="#4F90C5"
        android:textSize="34dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/E1"
        android:text="PASSWORD"
        android:textColor="#4F90C5"
        android:textSize="34dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/pass1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pass"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:textColor="#4F90C5"

        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pass1"
        android:text="MOBILE NO"
        android:textColor="#4F90C5"
        android:textSize="34dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/mobno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mob"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:textColor="#4F90C5"
        android:textSize="34dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4F90C5" />

    <TextView
        android:id="@+id/Adress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mobno"
        android:text="NAME"
        android:textColor="#4F90C5"
        android:textSize="34dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:layout_below="@+id/Adress"
        android:textSize="34dp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:orientation="vertical"
        android:gravity="center"
        >
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>


        <Button
            android:id="@+id/singup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SING IN"
            android:textColorLink="#B43BFF"
            android:textSize="25dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:textSize="25dp"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/Cansel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CANCEL"
            android:textSize="25dp"
            android:textStyle="bold"

            />

    </LinearLayout>





</RelativeLayout>